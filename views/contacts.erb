<form action="/contacts" method="POST">
  <div class="form-group">
    <label for="exampleFormControlInput1">Укажите имя</label>
    <input name="contact[name]" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Иванов Иван Иванович">
  </div>
  <div class="form-group">
    <label for="exampleFormControlInput1">Указжите свой телефон</label>
    <input name="contact[phone]" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Телефон">
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Напишите сооюешение</label>
    <textarea name="contact[message]" class="form-control" id="exampleFormControlTextarea1" rows="6"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Отправить</button>
</form>